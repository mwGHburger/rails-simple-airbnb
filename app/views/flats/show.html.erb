<div class="container">
  <div class="flat-info">
    <h1><%= @flat.name %></h1>
    <h3><%= @flat.address %></h3>
  </div>
  <div class="flat-info">
    <h2>A bit more about this flat...</h2>
    <p><%= @flat.description %></p>
  </div>
  <div class="flat-info">
    <h2>Details</h2>
    <p><i class="fas fa-user-friends"> </i><%= @flat.number_of_guests %></p>
    <p><i class="fas fa-euro-sign"> </i><%= @flat.price_per_night %></p>
  </div>

  <%= link_to "Edit flat", edit_flat_path(@flat)  %>
  <%= link_to "Back to home", flats_path %>
</div>
